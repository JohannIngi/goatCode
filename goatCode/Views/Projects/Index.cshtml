@model goatCode.Models.ViewModels.ProjectIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Projects</h2>
<p>
    @Html.ActionLink("Create New", "Create", new { ProjectId = Model.projectId })
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.files) {
    <tr>
        <td>
            @(Html.DisplayFor(modelItem => item.name) + "." + Html.DisplayFor(modelItem => item.extension))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { FileId = item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>

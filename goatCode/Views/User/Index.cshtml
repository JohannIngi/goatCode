                @Html.ActionLink(" ", "Edit", new { projectId = item.ID }, new { @class = "glyphicon glyphicon-edit" }) | <!--N-->
                @Html.ActionLink(" ", "Index", "Projects", new { projectId = item.ID }, new { @class = "glyphicon glyphicon-folder-open" }) | <!--Y-->
                @Html.ActionLink(" ", "ShareProjects", new { ProjectId = item.ID }, new { @class = "glyphicon glyphicon-link" }) | <!--Y-->
                @Html.ActionLink(" ", "Delete", new { projectId = item.ID }, new { @class = "glyphicon glyphicon-trash" }) |
                @Html.ActionLink("downloadproject", "DownloadProjectAsZip", new { projectId = item.ID })<!--Y-->

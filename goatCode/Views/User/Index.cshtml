@model IEnumerable<goatCode.Models.Entities.Project>

@{
    ViewBag.Title = "Projects";
}

<h2><br />Projects</h2>

<p>
    @Html.ActionLink("Create a new project", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Projects you own
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.name)        
        </td>
        <td></td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { projectId=item.ID }) | <!--N-->
            @Html.ActionLink("See Files", "Index", "Projects", new { projectId=item.ID }, null) | <!--Y-->
            @Html.ActionLink("Delete", "Delete", new { projectId = item.ID },
                new { onclick = "return confirm('Are you sure you wish to delete this file?');" }) | <!--Y-->
            @Html.ActionLink("Share", "ShareProjects", new { ProjectId = item.ID}) <!--Y-->
        </td>
    </tr>
}
    <tr>
        <th>
            Projects shared with you
        </th>
        <th>Project owner</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.NotOwned)
    {
        <tr>
            <td>
                @Html.Raw(item.name)
            </td>
            <td>
                @Html.Raw(item.name)                
            </td>

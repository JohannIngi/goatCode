@model IEnumerable<goatCode.Models.Entities.Project>

@{
    ViewBag.Title = "Projects";
}

<h2><br />Projects</h2>

<p>
    @Html.ActionLink("Create a new project", "Create", new { @class = "btn btn-success" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            Projects you own
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.Raw(item.name)        
        </td>
        <td></td>
        <td>
            @Html.ActionLink(" ", "Edit", new { projectId=item.ID }, new { @title = "Edit", @class = "glyphicon glyphicon-edit" }) | <!--N-->
            @Html.ActionLink(" ", "Index", "Projects", new { projectId=item.ID }, new { @title = "See files", @class = "glyphicon glyphicon-folder-open" }) | <!--Y-->
            @Html.ActionLink(" ", "ShareProjects", new { ProjectId = item.ID }, new { @title = "Share project", @class = "glyphicon glyphicon-link" }) |<!--Y-->
            @Html.ActionLink(" ", "Delete", new { projectId = item.ID }, new { @title = "Delete", @class = "glyphicon glyphicon-trash" }) |
            @Html.ActionLink("downloadproject", "DownloadProjectAsZip", new { projectId = item.ID })
            <!--    new { onclick = "return confirm('Are you sure you wish to delete this file?');" }) | -->
           
          
        </td>
    </tr>
}
    <tr>
        <th>
            Projects shared with you
        </th>
        <th>Project owner</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.NotOwned)
    {
        <tr>
            <td>
                @Html.Raw(item.name)
            </td>
            <td>
                @Html.Raw(item.projectOwner)
            </td>

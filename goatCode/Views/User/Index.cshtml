                @Html.ActionLink("Edit", "Edit", new { projectId = item.ID }) | <!--N-->
                @Html.ActionLink("See Files", "Index", "Projects", new { projectId = item.ID }, null) | <!--Y-->
                @Html.ActionLink("Delete", "Delete", new { projectId = item.ID },
                new { onclick = "return confirm('Are you sure you wish to delete this file?');" }) | <!--Y-->
